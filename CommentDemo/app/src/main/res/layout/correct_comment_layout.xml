<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="43dp">

    <TextView
        android:id="@+id/content_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论区"
        android:textSize="16dp"
        android:textColor="#1F2329"
        android:textStyle="normal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_marginTop="18dp"
        android:padding="3dp"
        android:layout_width="16dp"
        android:layout_height="16dp"

        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"/>


    <RelativeLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </RelativeLayout>

    <TextView
        android:id="@+id/character_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字评语"
        android:layout_below="@+id/content_area"
        android:textStyle="normal"
        android:textColor="#3370FF"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/voice_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_area"
        android:text="语音评语"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#1F2329"
        android:layout_toRightOf="@+id/character_comment"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/comment_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/voice_comment"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#BBBFC4"/>

    <ImageView
        android:id="@+id/pic_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/comment_line"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/comment_edit"
        android:layout_below="@id/pic_select"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:maxLines="6"
        android:gravity="top"
        android:background="#EFF0F1"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/comment_model_save"
        android:padding="3dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="#787F88"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/comment_model_save"
        android:layout_marginLeft="4dp"
        android:text="保存为模板"/>

    <Button
        android:id="@+id/comment_current_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:padding="2dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/comment_all_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全班发送"
        android:padding="2dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"/>


</RelativeLayout>