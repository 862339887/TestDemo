<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数码笔批改数据同步"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/pen_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pendialog_close_24"
        android:layout_alignParentRight="true" />
</RelativeLayout>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginBottom="20dp"
        android:text="请使用数码笔在学生作答上进行批改，支持√和×两种批改结果"
        android:layout_below="@+id/pen_exit" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在同步批改结果"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <com.example.alertdialogtest.view.HorizontalProgressBar
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/horizontalProgress1"
        android:progress="50"
        app:hpb_reachColor="#FF0000"

        app:hpb_unReachColor="#cab0b0"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="false"
        android:layout_gravity="center_horizontal"
        android:text="已完成本次批改数据同步"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前往查看报告"
            android:textSize="14sp"
            android:background="@color/cardview_shadow_end_color"
            android:textColor="#2D73F5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起弹窗后台同步"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/pen_dialog_button_background"
            />

    </LinearLayout>

 </LinearLayout>

